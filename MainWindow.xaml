<Window x:Class="Mod_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mod_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="255" Width="520">
    <Grid>
        <Button x:Name="Figur" Content="Фигура" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="480" Height="35" Click="Figur_Click"/>
        <Button x:Name="Notific" Content="Уведомления" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="480" Height="35" Click="Notific_Click"/>
        <Button x:Name="task1" Content="Задачи" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" Width="480" Height="35" Click="task1_Click"/>
        <Button x:Name="filt" Content="Фильтр" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Width="480" Height="35" Click="filt_Click"/>
        <Button x:Name="sort" Content="Сортировка" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Width="480" Height="35" Click="sort_Click"/>

    </Grid>
</Window>

<Window x:Class="Mod_3.tasks1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mod_3"
        mc:Ignorable="d"
        Title="Task Manager" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBox x:Name="taskInput" Width="300" Height="30" />
            <Button x:Name="addTaskButton" Content="Добавить задачу" Width="150" Height="30" Click="AddTaskButton_Click" Margin="0,10,0,0"/>
            <ListBox x:Name="taskList" Width="400" Height="150" Margin="0,10,0,0"/>
            <ComboBox x:Name="delegateSelector" Width="200" Height="30" Margin="0,10,0,0">
                <ComboBoxItem Content="Отправить уведомление"/>
                <ComboBoxItem Content="Записать в журнал"/>
            </ComboBox>
            <Button x:Name="executeButton" Content="Выполнить" Width="150" Height="30" Click="ExecuteButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
